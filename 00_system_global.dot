digraph G {
        graph [ dpi = 300 ]
        fontname = "Bitstream Vera Sans"
        fontsize = 8

        node [
                fontname = "Bitstream Vera Sans"
                fontsize = 8
                shape = "record"
        ]

        edge [
                fontname = "Bitstream Vera Sans"
                fontsize = 8
        ]

        Client [
                label = "{Client|
                        |
                        Read RFID Tag\l
                        Show information on LCD\l 
                        Connect to WiFi\l
                        Send/Get/Parse JSON\l
                        Verify student\l
                        Verify board\l
                        Borrow request\l
                        Return request\l}"
        ]

        Server [
                label = "{Server|
                        Student profiles\l
                        Registered boards\l
                        Log system\l
                        Admin interface\l
                        Autorise student\l
                        Autorise board\l
                        Borrow board\l
                        Return board\l}"
        ]

        RFID_Scanner [
                label = "{RFID_Scanner|
                        Scan card\l
                        }"
        ]

        LCD [
                label = "{LCD|
                        Show text information\l
                        }"
        ]

        edge [
                arrowhead = "onormal"
        ]

        RFID_Scanner -> Client
        LCD -> Client
        Client -> LCD
        Server -> Client
        Client -> RFID_Scanner
        Client -> Server

}